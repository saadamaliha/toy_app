<section class="py-5 bg-light">
  <div class="container">

    <div class="row text-center mb-5">
      <div class="col-lg-8 mx-auto">
        <h1 class="display-4 fw-bold">About Our Platform</h1>
        <p class="lead text-muted">
          The ultimate community for sharing micro-thoughts and connecting with like-minded people.
        </p>
      </div>
    </div>

    <div class="row g-4 mb-5 justify-content-center">
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center p-4">
            <i class="bi bi-people-fill fs-1 text-primary mb-3"></i>
            <h2 class="fw-bold"><%= @user_count %></h2>
            <p class="text-uppercase small text-muted">Active Users</p>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center p-4">
            <i class="bi bi-chat-square-text-fill fs-1 text-success mb-3"></i>
            <h2 class="fw-bold"><%= @post_count %></h2>
            <p class="text-uppercase small text-muted">MicroPosts</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
    <div class="col-12 text-center">
      <h3 class="h4 mb-4">Built With</h3>
      <div class="d-flex justify-content-center flex-wrap gap-3">
        <h5 class="mb-0">HTML5</h5>
        <h5 class="mb-0">CSS3</h5>
        <h5 class="mb-0">JavaScript</h5>
        <h5 class="mb-0">Ruby on Rails</h5>
        <h5 class="mb-0">Bootstrap</h5>
        <h5 class="mb-0">SCSS</h5>
      </div>
    </div>
  </div>


    <div class="row mt-5">
      <div class="col-12 text-center">
        <a href="<%= users_url %>" class="btn btn-primary btn-lg px-4 me-3">
          <i class="bi bi-people-fill me-2"></i>Meet Our Users
        </a>
        <a href="<%= microposts_url %>" class="btn btn-outline-secondary btn-lg px-4">
          <i class="bi bi-journals me-2"></i>Browse Posts
        </a>
      </div>
    </div>
  </div>
</section>